{deps, [
    {ibrowse, ".*", {git, "git://github.com/opscode/ibrowse",
                        {tag, "v4.0.1.1"}}},
    {envy, ".*", {git, "git://github.com/manderson26/envy.git", {branch, "master"}}}
  ]}.

%% Add dependencies that are only needed for development here. These
